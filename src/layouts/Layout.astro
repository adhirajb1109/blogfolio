---
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar";

const { title, description } = Astro.props.frontmatter || Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="noise p-6 sm:px-8 pb-32 mx-auto max-w-screen-md antialiased">
    <Navbar />
    <hr />
    <div
      class="flex w-full h-[180px] sm:h-[220px] rounded-lg my-[2.75rem] bg-neutral-50 border border-neutral-100 items-center justify-center overflow-hidden bg-cover bg-center"
      style={{
        background: `linear-gradient(to right, rgb(172, 182, 229) 0%, rgb(146, 233, 232) 70%, rgb(134, 253, 232) 100%)`,
      }}
    >
    </div>
    <h1 class="text-[1.425rem] md:text-2xl font-[675] text-slate-900 mb-[1.375rem]">
      {title}
    </h1>
    <div class="prose prose-slate">
      <slot />
    </div>
  </body>
</html>
